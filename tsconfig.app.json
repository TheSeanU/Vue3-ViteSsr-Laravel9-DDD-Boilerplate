{
      "extends": "@vue/tsconfig/tsconfig.web.json",
      "compilerOptions": {
            "composite": true,
            "baseUrl": ".",
            "paths": {
                  "*": ["ssr/*"]
            },
            "target": "es5",
            "module": "esnext",
            "strict": true,
            "jsx": "preserve",
            "importHelpers": true,
            "moduleResolution": "node",
            "skipLibCheck": true,
            "esModuleInterop": true,
            "allowSyntheticDefaultImports": true,
            "sourceMap": true,
            "allowUnreachableCode": false,
            "allowUnusedLabels": false,
            "declaration": true,
            "noImplicitAny": true,
            "noImplicitReturns": true,
            "noImplicitThis": true,
            "alwaysStrict": true,
            "noEmit": false,
            "allowJs": true,
            "checkJs": false,
            "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
      },
      "include": ["env.d.ts", "ssr/**/*.ts", "ssr/**/*.tsx", "ssr/**/*.vue"],
      "exclude": ["node_modules"]
}
