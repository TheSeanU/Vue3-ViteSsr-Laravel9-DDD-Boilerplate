{
    "compileOnSave": true,
    "compilerOptions": {
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noEmit": true,
        "checkJs": false,
        "baseUrl": "./",
        "paths": {
            "*": [
                "vue/*"
            ]
        },
    },
    "include": [
        "vue/**/*.ts",
        "vue/**/*.tsx",
        "vue/**/*.vue",
        "vue/**/*.js"
    ],
    "exclude": ["node_modules"]
}
