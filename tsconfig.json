{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    
    "moduleResolution": "Node",

    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vite/client"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "./*": [
        "./*"
      ],
      "ssr/*": [
        "./ssr/*"
      ],
      "domains/*": [
        "./ssr/domains/*"
      ],
      "application/*": [
        "./ssr/application/*"
      ],
      "infrastructure/*": [
        "./ssr/infrastructure/*"
      ],
    },
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },

}